doctype html
html#ng-app( ng-app='gameshow' )
  head

    //- styles
    link#ui( rel='stylesheet' type='text/css' href='/ui/style.css' )

    //- mobile style sheets
    meta( name='viewport' content='initial-scale=1, maximum-scale=1' )

    //- server data
    script( type='text/javascript' ).
      window.CLIENT_ID = '#{ id }';
      window.TYPES = !{ JSON.stringify( types )};


  //- main view
  body( ng-controller='AppController' ng-class='{ loading: !state.ready }' )
    #view( ng-view )

    //- scripts
    script( src='/socket.io/socket.io.js' type='text/javascript' )
    script( src='/app.js' type='text/javascript' )


    //- this can load later
    link( rel='stylesheet' type='text/css' href='/ui/highlight-theme.css' )